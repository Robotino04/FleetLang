let add3 = (a: Vec3, b: Vec3) -> Vec3 {
    return Vec3 {
        x: a.x + b.x,
        y: a.y + b.y,
        z: a.z + b.z,
    };
}
let sub3 = (a: Vec3, b: Vec3) -> Vec3 {
    return Vec3 {
        x: a.x - b.x,
        y: a.y - b.y,
        z: a.z - b.z,
    };
}
let inverse3 = (a: Vec3) -> Vec3 {
    return Vec3 {
        x: 1 / a.x,
        y: 1 / a.y,
        z: 1 / a.z,
    };
}
let mul3 = (a: Vec3, b: Vec3) -> Vec3 {
    return Vec3 {
        x: a.x * b.x,
        y: a.y * b.y,
        z: a.z * b.z,
    };
}
let div3 = (a: Vec3, b: Vec3) -> Vec3 {
    return Vec3 {
