                                ray = Ray {
                                    origin: hit.hit_point,
                                    direction: add3(reflect(ray.direction, surface_normal(hit)), mul1x3(hit.material.fuzziness, random_in_sphere(seed))),
                                };
                                color = mul3_color(hit.material.albedo, color);
                            }
                        }
