                put_number(clamp_i32((image[x][y].r * 255) as i32, 0, 255));
                putchar(' ');
                put_number(clamp_i32((image[x][y].g * 255) as i32, 0, 255));
                putchar(' ');
                put_number(clamp_i32((image[x][y].b * 255) as i32, 0, 255));
                putchar(' ');
            }
            putchar('\n');
        }
    }
    if do_display {
        deinit_window();
    }
    return 0;
}
